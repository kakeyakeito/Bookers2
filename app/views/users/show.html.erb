<div class="container">
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
  <div class="row">
      <div class="col-xs-3">
        <%= render 'create2', user: @user , book: @book %>
      </div>
        <div class="col-xs-9">
                <h1>Books</h1>
            <table class="table table-hover table-invers">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                </tr>
              </thead>
                <tbody>
                  <% @user.books.each do |book| %>
                  <tr>
                    <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg' , fallback: "no_image.jpg", size: "50x50" %></td>
                    <td><%= link_to book.title , book_path(book) %></td>
                    <td><%= book.body %></td>
                  </tr>
                  <% end %>

                </tbody>
            </table>
        </div>
  </div>
</div>