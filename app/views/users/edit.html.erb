<div class="container">
 <p id="notice"></p>
 <% if @user.errors.any? %>
      <h2><%= @user.errors.count %>件のerrorが発生しました。</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
<% end %>

<h2>User info</h2>
<%= form_for(@user) do |f| %>
    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
    </div>                      

    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Image</label>
        <%= f.file_field :profile_image, autofocus: true, class:"form-control", id:"inputEmail"%>
    </div>                      

    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Introduction</label>
        <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputEmail"%>
    </div>                      

    <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>

</div>