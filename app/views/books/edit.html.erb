<div class="container">
   <% if @book.errors.any? %>
      <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
<% end %>

    	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
			<!-- form_for -->
			<div class="edit_book">
				<%= form_for(@book) do |f| %>
					<h4>Title</h4>
				    <%= f.text_field :title ,class:"col-xs-12"%>
				    <h4>Opinion</h4>
				    <%= f.text_area :body ,class:"col-xs-12"%><br>
				    <%= f.submit 'Update Book',class:"col-xs-12 btn btn-primary"%>
				<% end %>
			</div>

			<p><%= link_to "show", book_path(@book) %>|<%= link_to "back", books_path %></p>
		</div>
		<div class="col-md-3"></div>
	</div>

</div>