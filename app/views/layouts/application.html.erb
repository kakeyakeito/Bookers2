<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <span>Bookers</span>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li>
          <!-- users/show(自分の)のリンク先 -->
          <%= link_to user_path(current_user.id), class: "glyphicon glyphicon-home home", style:"padding-top:15px;" do %>
          Home
          <% end %>
        </li>
        <li>
          <!-- users/indexのリンク先、そしてそこからshowを押してusers/show -->
          <%= link_to "Users", users_path, class: "glyphicon glyphicon-user users", style:"padding-top:15px;"%>
        </li>
        <li>
          <%= link_to "Books", books_path, class: "glyphicon glyphicon-book books", style:"padding-top:15px;"%>
        </li>
        <li>
          <%= link_to "logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout", style:"padding-top:15px;"%>
        </li>

        <% else %>

        <li>
          <%= link_to "Home", root_path, class: "glyphicon glyphicon-home home", style:"padding-top:15px;" %>
        </li>
        <li>
          <%= link_to "About", home_about_path, class: "glyphicon glyphicon-link about", style:"padding-top:15px;"%>
        </li>
        <li>
          <%= link_to "sign up", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up", style:"padding-top:15px;"%>
        </li>
        <li>
          <%= link_to "login", new_user_session_path,class: "glyphicon glyphicon-log-in sign_in", style:"padding-top:15px;"%>

          <% end %>
        </li>
      </ul>
    </nav>
  </div>
</header>
<div class="main">
    <%= yield %>
</div>
    <footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
  </body>
</html>
